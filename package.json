{
  "name": "skydata-backend",
  "version": "1.0.0",
  "description": "Backend del proyecto SKYDATA - Sistema de visualización de datos de estaciones de monitoreo ambiental de Bogotá",
  "main": "src/presentation/server.js",
  "scripts": {
    "start": "node src/presentation/server.js",
    "dev": "nodemon src/presentation/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageThreshold='{\"global\":{\"branches\":60,\"functions\":60,\"lines\":60,\"statements\":60}}'",
    "test:unit": "jest tests/unit/",
    "test:integration": "jest tests/integration/",
    "test:acceptance": "jest tests/acceptance/",
    "test:security": "jest tests/security/",
    "test:performance": "jest tests/performance/",
    "test:compatibility": "jest tests/compatibility/",
    "test:reliability": "jest tests/reliability/",
    "test:load": "artillery run tests/load-stress/load-test.yml --output test-results/load-report.json || echo 'Load test completed'",
    "test:stress": "artillery run tests/load-stress/stress-test.yml --output test-results/stress-report.json || echo 'Stress test completed'",
    "lint": "eslint . --ext .js || echo 'Linting completed with warnings'",
    "lint:fix": "eslint . --ext .js --fix"
  },
  "keywords": [
    "skydata",
    "geojson",
    "monitoreo",
    "bogota",
    "estaciones",
    "calidad-aire",
    "iso-25000"
  ],
  "author": "SKYDATA-BOGOTA",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "artillery": "^2.0.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "verbose": true
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
