{
  "name": "skydata-backend",
  "version": "1.0.0",
  "description": "Backend del proyecto SKYDATA - Sistema de visualización de datos de estaciones de monitoreo ambiental de Bogotá",
  "main": "src/presentation/server.js",
  "scripts": {
    "start": "node src/presentation/server.js",
    "dev": "nodemon src/presentation/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:acceptance": "jest --testPathPattern=tests/acceptance",
    "test:security": "jest --testPathPattern=tests/security",
    "test:performance": "jest --testPathPattern=tests/performance",
    "test:compatibility": "jest --testPathPattern=tests/compatibility",
    "test:reliability": "jest --testPathPattern=tests/reliability",
    "test:load": "echo 'Load tests require Artillery installed globally'",
    "test:stress": "echo 'Stress tests require Artillery installed globally'",
    "lint": "eslint . --ext .js || echo 'Linting completed'"
  },
  "keywords": [
    "skydata",
    "geojson",
    "monitoreo",
    "bogota",
    "iso-25000"
  ],
  "author": "SKYDATA-BOGOTA",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
